<header>
    <%= render "layouts/header"%>
<header>
<div class="container">
  <p style="color: green"><%= notice %></p>
  <p style="color: red"><%= @error %></p>
  <% content_for :title, "Posts" %>
  <% if current_user %>
    <div class="bg-success p-2 text-light">Upload Post</div>
      <div class="row justify-content-end mt-2">
        <form enctype="multipart/form-data" action="/posts/upload_csv" method="post">
            <table class="d-flex justify-content-center">
               <tr>
                    <td> <label class="">CSV File</label></td>
                    <td><input type="file" class=" form-control my-2" name="csv_file"></td>
               </tr>
               <tr>
                    <td>
                    </td>
                    <td>
                      <%= submit_tag "Upload", class: "btn btn-sm btn-success" %>
                      <input type="reset" value="Clear" class="btn btn-sm btn-success">
                    </td>
               </tr>
            </table>
        </form>
        </div>
    </div>
  <% end %>
</div>
<%= render "layouts/footer"%>


