<div class="w-50 m-auto" style="border:1px solid green;padding:0px; padding-bottom:20px;border-radius:5px">
  <% content_for :title, "Login" %>
      <div class="bg-success p-2  text-light">Login</div>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="d-flex justify-content-center w-100">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <table class="mt-5" style="width:100%">
          <tr>
            <td><%= f.label :email , "Email Address"%></td>
            <td colspan="2"><%= f.email_field :email, class: "form-control my-2", autofocus: true, autocomplete: "email" %></td>
          </tr>
          <tr>
            <td><%= f.label :password , "Password"%></td>
            <td colspan="2"><%= f.password_field :password, class: "form-control my-2",  autocomplete: "current-password" %></td>
          </tr>
          <tr>
            <td></td>
            <td>
              <% if devise_mapping.rememberable? %>
                <div class="field my-3">
                <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
              <% end %>
              
            </td>
            <td></td>
          </tr>
          <tr>
            <td></td>
            <td colspan="2">
               <%= f.submit "Log in",class: "btn w-100 btn-success btn-sm", data: {turbo: false}%>
            </td>
          </tr>
          <tr>
            <td></td>
            <td colspan="2"> <%= render "devise/shared/links" %></td>
          </tr>
      </table>
      <% end %>
    
    
</div>
<%= render "layouts/footer"%>